<%= render 'layouts/portfolio_navigation' %>
<div class="">
<div class="col-md-4">
  <p>Pinhole Pictures</p>
  <button class="btn btn-primary " data-toggle="modal" data-target="#myModal">statement</button>
  
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Pinhole Pictures</h4>
      </div>
      <div class="modal-body">
        <p>This is where the awesome artists statement will go.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

  
    <% @pinholes.each_with_index do |pinhole, index| %>
    <div class=" side-gallery <%= 'active' if index == 0 %>" data-target="#carousel-pinhole" data-slide-to="<%= index %>">
      <%= image_tag pinhole.image.url(:thumb), class: "img-responsive" %>
    </div>
    <% end %>  

  </div>

  <div class="col-md-8">
    <div id="carousel-pinhole" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <% @pinholes.each_with_index do |pinhole, index| %>
        
        <div class="item <%= 'active' if index == 0 %>" data-slide-number="<%= index %>">
          <%= image_tag pinhole.image.url(:medium), class: "img-responsive" %>
        </div>
      
    <% end %>
   
    
  </div>

  
</div>

  </div>

    <tbody>
      <% @pinholes.each do |pinhole| %>
        <tr>
          <td><%= pinhole.title %></td>
          <td><%= pinhole.description %></td>
          <td><%= pinhole.image_url %></td>
          <td><%= link_to 'Show', pinhole %></td>
          <td><%= link_to 'Edit', edit_pinhole_path(pinhole) %></td>
          <td><%= link_to 'Destroy', pinhole, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Pinhole', new_pinhole_path %>
</div>