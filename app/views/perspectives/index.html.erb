<%= render 'layouts/portfolio_navigation' %>
<div class="container">

  <h1>Perspective</h1>

  <div class="col-md-4">
    <% @perspectives.each_with_index do |perspective, index| %>
    <div class=" side-gallery <%= 'active' if index == 0 %>" data-target="#carousel-perspective" data-slide-to="<%= index %>">
      <%= image_tag perspective.image.url(:thumb), class: "img-responsive" %>
    </div>
    <% end %>  

  </div>

  <div class="col-md-8">
    <div id="carousel-perspective" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <% @perspectives.each_with_index do |perspective, index| %>
        
        <div class="item <%= 'active' if index == 0 %>" data-slide-number="<%= index %>">
          <%= image_tag perspective.image.url(:medium), class: "img-responsive" %>
        </div>
      
    <% end %>
   
    
  </div>

  <tbody>
    <% @perspectives.each do |perspective| %>
      <tr>
        <td><%= perspective.title %></td>
        <td><%= perspective.description %></td>
        <td><%= perspective.image_url %></td>
        <td><%= link_to 'Show', perspective %></td>
        <td><%= link_to 'Edit', edit_perspective_path(perspective) %></td>
        <td><%= link_to 'Destroy', perspective, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Perspective', new_perspective_path %>
